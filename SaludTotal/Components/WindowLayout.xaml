<UserControl x:Class="SaludTotal.Components.WindowLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SaludTotal.Components"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400">
    <UserControl.ContentTemplate>
        <DataTemplate>
            <Grid>
                <!--Contenedor Principal-->
                <Border
                VerticalAlignment="Stretch" 
                HorizontalAlignment="Stretch" 
                CornerRadius="15"
                Padding="10, 0, 10, 10"
                Margin="40,40">
                    <Border.Background>
                        <SolidColorBrush Color="{Binding HeaderBackgroundColor.(SolidColorBrush.Color), RelativeSource={RelativeSource AncestorType=UserControl}}" 
                     Opacity="0.8"/>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Direction="315" ShadowDepth="5" Opacity="0.3" BlurRadius="10"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <!-- Título -->
                        <TextBlock Grid.Row="0" Text="{Binding Title ,RelativeSource={RelativeSource AncestorType=UserControl}}" 
                           FontSize="28" FontWeight="Bold" 
                           Foreground="{Binding HeaderForegroundColor ,RelativeSource={RelativeSource AncestorType=UserControl}}" 
                           HorizontalAlignment="Center" 
                           Margin="0,10,0,30"/>
                        <ContentPresenter Opacity="1" Grid.Row="1" Content="{TemplateBinding Content}" />
                    </Grid>
                </Border>
            </Grid>
        </DataTemplate>
    </UserControl.ContentTemplate>
</UserControl>