<Window x:Class="SaludTotal.Desktop.Views.AdministracionTurnosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:SaludTotal.Desktop.Converters"
        mc:Ignorable="d"
        Title="Salud Total - Administración de Turnos" Height="800" Width="1400" 
        WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" ResizeMode="NoResize">

    <Window.Resources>
        <!-- Converters -->
        <converters:EspecialidadToBrushConverter x:Key="EspecialidadToBrushConverter"/>
        <converters:EspecialidadToForegroundConverter x:Key="EspecialidadToForegroundConverter"/>
        <converters:DateTimeFormatConverter x:Key="DateTimeFormatConverter"/>
        <converters:BooleanToSiNoConverter x:Key="BooleanToSiNoConverter"/>
        <!-- Convertidor Boolean a Visibility ya incluido en WPF -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Convertidor para habilitar botón Gestionar -->
        <converters:TurnoSeleccionadoToBooleanConverter x:Key="TurnoSeleccionadoToBooleanConverter"/>

        <!-- Estilo para botones de ventana (minimizar/cerrar) -->
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="315" ShadowDepth="2" Opacity="0.3" BlurRadius="4"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Effect="{TemplateBinding Effect}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#A8D0F3"/>
                                <Setter Property="BorderBrush" Value="#4A90E2"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black" Direction="315" ShadowDepth="3" Opacity="0.4" BlurRadius="6"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2C3E50"/>
                                <Setter Property="BorderBrush" Value="#34495E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para filtros/botones de especialidad -->
        <Style x:Key="FilterButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Background" Value="#E8F4FD"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#A8D0F3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4A90E2"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="#2C3E50"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para filtros/botones de especialidad cuando están activos -->
        <Style x:Key="ActiveFilterButtonStyle" TargetType="Button" BasedOn="{StaticResource FilterButtonStyle}">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2C3E50"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Estilo para botón de acción principal -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="25,10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#28A745"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#218838"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo personalizado para TabControl -->
        <Style x:Key="CustomTabControlStyle" TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
        </Style>

        <!-- Estilo personalizado para TabItem -->
        <Style x:Key="CustomTabItemStyle" TargetType="TabItem">
            <Setter Property="Background" Value="#E8F4FD"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="BorderThickness" Value="1,1,1,0"/>
            <Setter Property="BorderBrush" Value="#A8D0F3"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="0,0,2,0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8,8,0,0"
                                Padding="{TemplateBinding Padding}"
                                Margin="{TemplateBinding Margin}">
                            <ContentPresenter x:Name="ContentSite"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              ContentSource="Header"
                                              Margin="0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4A90E2"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#2C3E50"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#A8D0F3"/>
                                <Setter Property="Foreground" Value="#2C3E50"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Fondo de la ventana -->
        <Border>
            <Border.Background>
                <ImageBrush ImageSource="pack://application:,,,/Resources/Img/Fondo_desktop_1.jpg" Stretch="UniformToFill"/>
            </Border.Background>
        </Border>

        <!-- Botones de ventana (minimizar y cerrar) -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,15,15,0" Panel.ZIndex="999">
            <Button Style="{StaticResource WindowButtonStyle}" Content="⎯" Click="MinimizeWindow_Click" ToolTip="Minimizar"/>
            <Button Style="{StaticResource WindowButtonStyle}" Content="✕" Click="CloseWindow_Click" ToolTip="Cerrar"/>
        </StackPanel>

        <!-- Botón Volver al Inicio -->
        <Button x:Name="VolverInicioButton" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Margin="20,20,0,0" 
                Panel.ZIndex="999"
                Height="45"
                Padding="20,10"
                FontSize="14"
                FontWeight="SemiBold"
                Background="#4A90E2"
                Foreground="White"
                BorderThickness="0"
                Click="VolverInicio_Click"
                Content="🏠 Volver al Inicio"
                ToolTip="Regresar al Dashboard Principal">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#5BA0F2"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#357ABD"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Contenido principal con TabControl -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="30,80,30,30">
            <Grid>
                <!-- Header principal -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header con título -->
                <Border Grid.Row="0" Background="#CC2C3E50" CornerRadius="10,10,10,10" Padding="0, 10,0, 0">
                    <StackPanel>
                        <TextBlock Text="Administración de Turnos" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="White" 
                                   Margin="0, 10, 0, 10"
                               HorizontalAlignment="Center"/>

                        <!-- TabControl -->
                <TabControl x:Name="MainTabControl" 
                           Grid.Row="1" 
                           Style="{StaticResource CustomTabControlStyle}"
                           Background="Transparent">

                    <!-- Tab 1: Gestión de Turnos -->
                    <TabItem Header="📋 Gestión de Turnos" Style="{StaticResource CustomTabItemStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <!-- Filtros y búsqueda -->
                                <RowDefinition Height="Auto"/>
                                <!-- Tabla principal de turnos -->
                                <RowDefinition Height="Auto"/>
                                <!-- Botones de acción turnos -->
                            </Grid.RowDefinitions>

                            <!-- Panel de filtros y búsqueda -->
                            <Border Grid.Row="0" Background="#F0FFFFFF" BorderBrush="#E0E0E0" BorderThickness="1,0,1,1" Padding="20,15">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Búsqueda -->
                                    <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                                        <TextBlock Text="Buscar por:" FontWeight="Medium" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        <ComboBox x:Name="SearchTypeCombo" Width="120" Height="30" SelectedIndex="0" Margin="0,0,10,0"
                                                  SelectionChanged="SearchTypeCombo_SelectionChanged">
                                            <ComboBoxItem Content="Doctor"/>
                                            <ComboBoxItem Content="Paciente"/>
                                            <ComboBoxItem Content="Fecha"/>
                                        </ComboBox>
                                        <TextBox x:Name="SearchTextBox" Width="300" Height="30" 
                                                 VerticalContentAlignment="Center" 
                                                 Padding="10,0"
                                                 BorderBrush="#A8D0F3"
                                                 BorderThickness="2"
                                                 KeyDown="SearchTextBox_KeyDown"/>
                                        <Button x:Name="SearchButton" Content="🔍" Width="45" Height="30" Margin="5,0,0,0" 
                                                Background="#4A90E2" Foreground="White" BorderThickness="0"
                                                Click="SearchButton_Click"
                                                ToolTip="Buscar">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="8,4">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#5BA0F2"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter Property="Background" Value="#357ABD"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                        <Button x:Name="ClearSearchButton" Content="✖" Width="45" Height="30" Margin="5,0,0,0" 
                                                Background="#E74C3C" Foreground="White" BorderThickness="0"
                                                Click="ClearSearchButton_Click"
                                                ToolTip="Limpiar búsqueda">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="8,4">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#EC7063"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter Property="Background" Value="#C0392B"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </StackPanel>

                                    <!-- Filtros por especialidad -->
                                    <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="Especialidad:" FontWeight="Medium" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                        <ComboBox x:Name="EspecialidadComboBox"
                                                  Width="200"
                                                  Height="35"
                                                  SelectedValuePath="Content"
                                                  SelectedValue="{Binding EspecialidadSeleccionada, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  SelectionChanged="EspecialidadComboBox_SelectionChanged"
                                                  Margin="0,0,10,0">
                                            <ComboBoxItem Content="Todos"/>
                                            <ComboBoxItem Content="Cardiología"/>
                                            <ComboBoxItem Content="Ginecología"/>
                                            <ComboBoxItem Content="Pediatría"/>
                                            <ComboBoxItem Content="Clínica General"/>
                                        </ComboBox>
                                        <TextBlock Text="Estado:" FontWeight="Medium" VerticalAlignment="Center" Margin="10,0,15,0"/>
                                        <ComboBox x:Name="EstadoComboBox"
                                                  Width="150"
                                                  Height="35"
                                                  SelectedValuePath="Content"
                                                  SelectedValue="{Binding EstadoSeleccionado, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  SelectionChanged="EstadoComboBox_SelectionChanged">
                                            <ComboBoxItem Content="Todos"/>
                                            <ComboBoxItem Content="activo"/>
                                            <ComboBoxItem Content="aceptado"/>
                                            <ComboBoxItem Content="pendiente"/>
                                            <ComboBoxItem Content="cancelado"/>
                                            <ComboBoxItem Content="rechazado"/>
                                            <ComboBoxItem Content="atendido"/>
                                            <ComboBoxItem Content="desaprovechado"/>
                                        </ComboBox>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Tabla de turnos -->
                            <Border Grid.Row="1" Background="#F0FFFFFF" BorderBrush="#E0E0E0" BorderThickness="1,0,1,0" Padding="0" Height="400">
                                <Grid>
                                    <DataGrid x:Name="TurnosDataGrid"
                                              ItemsSource="{Binding Turnos}" 
                                              SelectedItem="{Binding TurnoSeleccionado, Mode=TwoWay}"
                                              AutoGenerateColumns="False" 
                                              IsReadOnly="True" 
                                              CanUserAddRows="False"
                                              CanUserDeleteRows="False"
                                              CanUserReorderColumns="False"
                                              CanUserResizeRows="False"
                                              GridLinesVisibility="Horizontal"
                                              HeadersVisibility="Column"
                                              SelectionMode="Single"
                                              FontSize="14"
                                              RowHeight="45"
                                              AlternatingRowBackground="#F0F8FBFF"
                                              Background="Transparent">

                                        <DataGrid.ColumnHeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="Background" Value="#E62C3E50"/>
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="FontSize" Value="14"/>
                                                <Setter Property="Padding" Value="15,10"/>
                                                <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                                <Setter Property="BorderBrush" Value="#34495E"/>
                                            </Style>
                                        </DataGrid.ColumnHeaderStyle>

                                        <DataGrid.CellStyle>
                                            <Style TargetType="DataGridCell">
                                                <Setter Property="Padding" Value="15,5"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                            </Style>
                                        </DataGrid.CellStyle>

                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80" MinWidth="80"/>

                                            <DataGridTemplateColumn Header="Fecha y Hora" Width="200" MinWidth="180">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="5,0">
                                                            <TextBlock Text="{Binding Fecha, Converter={StaticResource DateTimeFormatConverter}}" 
                                                                       FontWeight="Medium" FontSize="13"/>
                                                            <TextBlock Text="{Binding Hora}" 
                                                                       FontSize="12" Foreground="#252421"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>

                                            <DataGridTemplateColumn Header="Paciente" Width="*" MinWidth="100">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Paciente.NombreCompleto, FallbackValue='N/A'}" 
                                                                   VerticalAlignment="Center" 
                                                                   Padding="5,0"/>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>

                                            <DataGridTemplateColumn Header="Profesional" Width="*" MinWidth="100">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Profesional.NombreCompleto, FallbackValue='N/A'}" 
                                                                   VerticalAlignment="Center" 
                                                                   Padding="5,0"/>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>

                                            <DataGridTemplateColumn Header="Solicita Cancelacion" Width="" MinWidth="200">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Border CornerRadius="6" Padding="5,2" HorizontalAlignment="Center">
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Setter Property="Background" Value="#6C757D"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding SolicitaCancelacion}" Value="True">
                                                                            <Setter Property="Background" Value="#28A745"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding SolicitaCancelacion}" Value="False">
                                                                            <Setter Property="Background" Value="#DC3545"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                            <TextBlock 
                                                                Text="{Binding SolicitaCancelacion, Converter={StaticResource BooleanToSiNoConverter}, FallbackValue='N/A'}"
                                                                Foreground="White"
                                                                FontWeight="SemiBold"
                                                                FontSize="13"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>

                                            <DataGridTemplateColumn Header="Estado" Width="150" MinWidth="120">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Border CornerRadius="6" Padding="12,6" HorizontalAlignment="Center">
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Estado}" Value="Activo">
                                                                            <Setter Property="Background" Value="#28A745"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Estado}" Value="activo">
                                                                            <Setter Property="Background" Value="#28A745"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Estado}" Value="Pendiente">
                                                                            <Setter Property="Background" Value="#FFC107"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Estado}" Value="pendiente">
                                                                            <Setter Property="Background" Value="#FFC107"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Estado}" Value="Cancelado">
                                                                            <Setter Property="Background" Value="#DC3545"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Estado}" Value="cancelado">
                                                                            <Setter Property="Background" Value="#DC3545"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Estado}" Value="Aceptado">
                                                                            <Setter Property="Background" Value="#007BFF"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Estado}" Value="aceptado">
                                                                            <Setter Property="Background" Value="#007BFF"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Estado}" Value="Rechazado">
                                                                            <Setter Property="Background" Value="#6F42C1"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Estado}" Value="rechazado">
                                                                            <Setter Property="Background" Value="#6F42C1"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Estado}" Value="Atendido">
                                                                            <Setter Property="Background" Value="#20C997"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Estado}" Value="atendido">
                                                                            <Setter Property="Background" Value="#20C997"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Estado}" Value="Desaprovechado">
                                                                            <Setter Property="Background" Value="#6C757D"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Estado}" Value="desaprovechado">
                                                                            <Setter Property="Background" Value="#6C757D"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                            <TextBlock Text="{Binding Estado}" 
                                                                       Foreground="White" 
                                                                       FontWeight="Medium" 
                                                                       FontSize="12" 
                                                                       HorizontalAlignment="Center"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>

                                            <DataGridTemplateColumn Header="Gestionar" Width="120" MinWidth="120">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Button Content="📝 Gestionar" 
                                                                Height="30"
                                                                Padding="8,4"
                                                                FontSize="11"
                                                                FontWeight="Medium"
                                                                Background="#FFC107" 
                                                                Foreground="Black"
                                                                BorderThickness="0"
                                                                Click="GestionarTurno_Click"
                                                                Tag="{Binding}"
                                                                x:Name="GestionarButton"
                                                                ToolTip="Gestionar estado del turno">
                                                            <Button.Template>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="#E0A800"/>
                                                                        </Trigger>
                                                                        <Trigger Property="IsPressed" Value="True">
                                                                            <Setter Property="Background" Value="#D39E00"/>
                                                                        </Trigger>
                                                                        <Trigger Property="IsEnabled" Value="False">
                                                                            <Setter Property="Background" Value="#6C757D"/>
                                                                            <Setter Property="Opacity" Value="0.6"/>
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Button.Template>
                                                        </Button>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>

                                    <!-- Indicador de carga -->
                                    <Border Background="#80FFFFFF" 
                                            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                                            VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock Text="Cargando turnos..." FontSize="18" FontWeight="SemiBold" Foreground="#2C3E50"/>
                                            <ProgressBar IsIndeterminate="True" Width="300" Height="8" Margin="0,10,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>

                            <!-- Panel de botones de acción -->
                            <Border Grid.Row="2" Background="#F0FFFFFF" BorderBrush="#E0E0E0" BorderThickness="1,0,1,1" CornerRadius="0,0,10,10" Padding="20,15">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="🔄 Actualizar" 
                                            Height="40"
                                            Padding="20,8"
                                            Margin="0,0,15,0"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Background="#6C757D" 
                                            Foreground="White"
                                            BorderThickness="0"
                                            Click="RefreshTurnos_Click"
                                            ToolTip="Actualizar lista de turnos">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#7D8A97"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#5A6268"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <Button Content="+ Nuevo Turno" 
                                            Height="40"
                                            Padding="25,8"
                                            FontSize="15"
                                            FontWeight="SemiBold"
                                            Background="#28A745"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Click="NuevoTurno_Click"
                                            ToolTip="Crear un nuevo turno">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#34CE57"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#1E7E34"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </TabItem>

                    <!-- Tab 2: Solicitudes de Reprogramación -->
                    <TabItem Header="📅 Solicitudes de Reprogramación" Style="{StaticResource CustomTabItemStyle}">
                        <Grid>
                            <!-- Tabla de solicitudes de reprogramación -->
                            <Border Background="#F0FFFFFF" BorderBrush="#E0E0E0" BorderThickness="1,0,1,1" CornerRadius="0,0,10,10" Padding="0" Height="550">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="259*"/>
                                        <ColumnDefinition Width="410*"/>
                                    </Grid.ColumnDefinitions>
                                    <DataGrid x:Name="SolicitudesDataGrid"
                                              ItemsSource="{Binding SolicitudesReprogramacion}" 
                                              AutoGenerateColumns="False" 
                                              IsReadOnly="True" 
                                              CanUserAddRows="False"
                                              CanUserDeleteRows="False"
                                              CanUserReorderColumns="False"
                                              CanUserResizeRows="False"
                                              GridLinesVisibility="Horizontal"
                                              HeadersVisibility="Column"
                                              SelectionMode="Single"
                                              FontSize="14"
                                              RowHeight="45"
                                              AlternatingRowBackground="#F0F8FBFF"
                                              Background="Transparent" Grid.ColumnSpan="2">

                                        <DataGrid.ColumnHeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="Background" Value="#E66F42C1"/>
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="FontSize" Value="14"/>
                                                <Setter Property="Padding" Value="15,10"/>
                                                <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                                <Setter Property="BorderBrush" Value="#8E44AD"/>
                                            </Style>
                                        </DataGrid.ColumnHeaderStyle>

                                        <DataGrid.CellStyle>
                                            <Style TargetType="DataGridCell">
                                                <Setter Property="Padding" Value="15,5"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                            </Style>
                                        </DataGrid.CellStyle>

                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60" MinWidth="60"/>

                                            <DataGridTemplateColumn Header="Fecha y Hora Original" Width="200" MinWidth="180">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="5,0">
                                                            <TextBlock Text="{Binding Turno.Fecha, Converter={StaticResource DateTimeFormatConverter}}" 
                                                                       FontWeight="Medium" FontSize="13"/>
                                                            <TextBlock Text="{Binding Turno.Hora}" 
                                                                       FontSize="12" Foreground="#252421"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>

                                            <DataGridTemplateColumn Header="Fecha y Hora Nueva" Width="200" MinWidth="180">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="5,0">
                                                            <TextBlock Text="{Binding Fecha, Converter={StaticResource DateTimeFormatConverter}}" 
                                                                       FontWeight="Medium" FontSize="13" Foreground="#28A745"/>
                                                            <TextBlock Text="{Binding Hora}" 
                                                                       FontSize="12" Foreground="#28A745"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>

                                            <DataGridTemplateColumn Header="Paciente" Width="*" MinWidth="150">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Turno.Paciente.NombreApellido, FallbackValue='N/A'}" 
                                                                   VerticalAlignment="Center" 
                                                                   Padding="5,0"/>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>

                                            <DataGridTemplateColumn Header="Doctor" Width="*" MinWidth="150">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Turno.Profesional.NombreApellido, FallbackValue='N/A'}" 
                                                                   VerticalAlignment="Center" 
                                                                   Padding="5,0"/>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>

                                            <DataGridTemplateColumn Header="Acciones" Width="180" MinWidth="180">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                            <Button Content="✓ Aceptar" 
                                                                    Height="28"
                                                                    Padding="8,4"
                                                                    FontSize="11"
                                                                    FontWeight="Medium"
                                                                    Background="#28A745" 
                                                                    Foreground="White"
                                                                    BorderThickness="0"
                                                                    Margin="0,0,5,0"
                                                                    Click="AceptarSolicitud_Click"
                                                                    Tag="{Binding}"
                                                                    ToolTip="Aceptar solicitud de reprogramación">
                                                                <Button.Template>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        </Border>
                                                                        <ControlTemplate.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter Property="Background" Value="#34CE57"/>
                                                                            </Trigger>
                                                                            <Trigger Property="IsPressed" Value="True">
                                                                                <Setter Property="Background" Value="#1E7E34"/>
                                                                            </Trigger>
                                                                        </ControlTemplate.Triggers>
                                                                    </ControlTemplate>
                                                                </Button.Template>
                                                            </Button>
                                                            <Button Content="✗ Rechazar" 
                                                                    Height="28"
                                                                    Padding="8,4"
                                                                    FontSize="11"
                                                                    FontWeight="Medium"
                                                                    Background="#DC3545" 
                                                                    Foreground="White"
                                                                    BorderThickness="0"
                                                                    Click="RechazarSolicitud_Click"
                                                                    Tag="{Binding}"
                                                                    ToolTip="Rechazar solicitud de reprogramación">
                                                                <Button.Template>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        </Border>
                                                                        <ControlTemplate.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter Property="Background" Value="#E55A5A"/>
                                                                            </Trigger>
                                                                            <Trigger Property="IsPressed" Value="True">
                                                                                <Setter Property="Background" Value="#C82333"/>
                                                                            </Trigger>
                                                                        </ControlTemplate.Triggers>
                                                                    </ControlTemplate>
                                                                </Button.Template>
                                                            </Button>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </Border>
                        </Grid>
                    </TabItem>

                </TabControl>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>